<% timeslots = [
      "Monday Morning", "Monday Midday", "Monday Evening",
      "Tuesday Morning", "Tuesday Midday", "Tuesday Evening",
      "Wednesday Morning", "Wednesday Midday", "Wednesday Evening",
      "Thursday Morning", "Thursday Midday", "Thursday Evening",
      "Friday Morning", "Friday Midday", "Friday Evening",
      "Saturday Morning", "Saturday Midday", "Saturday Evening",
      "Sunday Morning", "Sunday Midday", "Sunday Evening"
] %>


<%= form_with(user: @user, local: true) do |form| %>
  <%= form.label :avaliabity, "Select one or more day/time slots" %>
  <%= form.select :availabity,
                 timeslots,
                  {},
                  multiple: true,
                  size: 7 %>   <!-- 'size' sets how many visible rows you see at once -->
  <%= form.submit %>
<% end %>
